<p id="notice"><%= notice %></p>

<p>
  <strong>Day:</strong>
  <%= @schedule.day_id %>
</p>
<p>
  <strong>Tour:</strong>
  <%= tour(@schedule.tour_id).name %>
</p>

<p>
  <strong>
    <a href="/schedules/<%= @schedule.venue_id %>">
      <%= venue(@schedule.venue_id).name %>
    </a>
    </strong>
</p>

<p>
  <strong>Show number:</strong>
  <%= @schedule.show_number %>
</p>

<p>
  <strong>Show status:</strong>
  <%= @schedule.show_status %>
</p>

<p>
  <% if @schedule.income_id != nil %>
    <strong>See <a href="/incomes/<%= @schedule.income_id %>">Settlement Sheet</strong></a>
  <% end %>
