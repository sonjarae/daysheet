<!DOCTYPE html>
<html>
  <p id="notice"><%= notice %></p>
  <h1>Schedules</h1>
  <table>
    <thead>
      <tr>
        <th>Day</th>
        <th>Tour</th>
        <th>Venue</th>
        <th>Income</th>
        <th>Show Number</th>
        <th>Show Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.day_id %></td>
           <td>
            <% if schedule.tour_id != nil %>
              <a href="/tours/<%= schedule.tour_id %>">
                <% tour(schedule.tour_id).name %>
              </a>
             <% end %> 
          </td>
          <td>
            <% if schedule.venue_id != nil %>
              <a href="/schedules/<%= schedule.venue_id %>">
                <% venue(schedule.venue_id).name %>
              </a>
            <% end %>  
          </td>
          <td>
            <% if schedule.income_id != nil %>
              <a href="/incomes/<%= schedule.income_id %>">  
                <% income(schedule.income_id).name %>
              </a>
            <% end %>
          </td>
          <td><%= schedule.show_number %></td>
          <td><%= schedule.show_status %></td>
          <td><%= link_to 'Show', schedule %></td>
          <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
          <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Schedule', new_schedule_path %>
</body>
</html>