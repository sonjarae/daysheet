<!doctype html>
<html lang="en">
<body>
<main role="main" class="container">
<p id="notice"><%= notice %></p>
<h1>Scheduled Shows</h1>
<h2>
<%= link_to 'New Schedule', new_schedule_path %>
</h2>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>Tour</th>
      <th>Venue</th>
      <th>Date</th>
      <th>Sound Check</th>
      <th>Doors</th>
      <th>Set Time</th>
      <th>Show Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
    <tr>
      <th scope="row"><%= link_to 'View/Edit', schedule %></th>
      <td> <%= link_to tour(schedule.tour_id).name, '/tours/' + schedule.tour_id.to_s %> </td>
      <td> <%= link_to venue(schedule.venue_id).name, '/venues/'+schedule.venue_id.to_s %> </td>
      <td><%= day(schedule.day_id).date %></td>
      <td><%= schedule.sound_check_time %></td>
      <td><%= schedule.doors_time %></td>
      <td><%= schedule.set_time %></td>
      <td><%= schedule.show_status %></td>
      <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
</html>