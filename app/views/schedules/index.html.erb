<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
  </script>
<![endif]-->
</head>
<body>
  <p id="notice"><%= notice %></p>

  <h1>Schedules</h1>

  <table>
    <thead>
      <tr>
        <th>Day</th>
        <th>Tour</th>
        <th>Venue</th>
        <th>Income</th>
        <th>Show Number</th>
        <th>Show Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.day_id %></td>
          <td><%= this_tour(schedule.tour_id) %></td>
          <td><%= get_venue_by_id(schedule.venue_id) %></td>
          <td><%= schedule.income_id %></td>
          <td><%= schedule.show_number %></td>
          <td><%= schedule.show_status %></td>

          <td><%= link_to 'Show', schedule %></td>
          <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
          <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Schedule', new_schedule_path %>
</body>
</html>