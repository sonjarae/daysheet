<!DOCTYPE html>
<html>
  <p id="notice"><%= notice %></p>
  <h1>Shows</h1>
  <h2><%= link_to 'New Show', new_schedule_path %></h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Tour</th>
        <th>Day</th>
        <th>Venue</th>
        <th>Income</th>
        <th>Show Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @schedules.each do |schedule| %>
      <tr>
        <td><%= link_to 'View/Edit', schedule %></td>
        <td>
          <% if schedule.tour_id != nil %>
            <a href="/tours/<%= schedule.tour_id %>">
              <%= tour(schedule.tour_id).name %>
            </a>
           <% end %> 
        </td>
        <td>
          <% if schedule.day_id != nil %>
            <a href="/days/<%= schedule.day_id %>">
              <%= day(schedule.day_id).date %>
            </a>
           <% end %> 
        </td>
        <td>
          <% if schedule.venue_id != nil %>
            <a href="/venues/<%= schedule.venue_id %>">
              <%= schedule.venue_id %>
            </a>
          <% end %>  
        </td>
        <td>
          <% if income(schedule.id) != nil %>
            <a href="/incomes/<%= income(schedule.id) %>">  
              <%= schedule.id %>
            </a>
          <% end %>
        </td>
        <td><%= schedule.show_status %></td>
        <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
</html>