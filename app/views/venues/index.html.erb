<!doctype html>
<html lang="en">
<body>
<main role="main" class="container">
<p id="notice"><%= notice %></p>
<h1>Venues</h1>
<h2>
<%= link_to 'New Venue', new_venue_path %>
</h2>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Website</th>
      <th scope="col">Booking Contact</th>
      <th scope="col">Production Contact</th>
      <th scope="col">Sound Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <th scope="row"><%= link_to 'View/Edit', venue %></th>
        <td><%= venue.name %></td>
        <td><%= venue.address %></td>
        <td><%= venue.phone %></td>
        <td><%= venue.website %></td>
        <td><%= venue.booking_contact %></td>
        <td><%= venue.production_contact %></td>
        <td><%= venue.sound_contact %></td>
        <td><%= link_to 'Delete', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</main>
</body>
</html>
