<!doctype html>
<body>
<main role="main" class="container">
  <p id="notice"><%= notice %></p>  
  <div class="starter-template">
    <table>
      <thead>
        <tr>
          <th>Tour</th>
          <th>Date</th>
          <th>Number of shows</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <form>
        <tbody>
          <% @days.each do |d| %>
            <td><%= tour(d.tour_id).name %></td>
            <td><%= d.date %></td>
            <td><%= schedules(d.id).count %></td>
            <td><%= link_to 'Show', d %></td>
            <td><%= link_to 'Edit', edit_day_path(d) %></td>
            <td><%= link_to 'Delete', d, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %> 
        </tbody>
      </form>
    </table> 
    <!-- /. table -->
  </div>
</main>
<!-- /.container -->
</body>
</html>
<script >
  function refresh{
    location.reload();
  }
</script>