<p id="notice"><%= notice %></p>

<h1>Days</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Tour</th>
      <th>Venue</th>
      <th>Schedule</th>
      <th>Income</th>
      <th>Show number</th>
      <th>Show status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.date %></td>
        <td><%= day.tour_id %></td>
        <td><%= day.venue_id %></td>
        <td><%= day.schedule_id %></td>
        <td><%= day.income_id %></td>
        <td><%= day.show_number %></td>
        <td><%= day.show_status %></td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

