
<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
  </script>
<![endif]-->
</head>
<body>
  <p id="notice"><%= notice %></p>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to "DaySheet", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   '#' %></li>
            <li><%= link_to "Help",   '#' %></li>
            <fb:login-button 
              scope="public_profile,email"
              onlogin="checkLoginState();">
            </fb:login-button>
          </ul>
        </nav>
      </div>
  </header>
  <h3>Current Tour: <%= @curr_tour %></h3>
  <div class="container" id="main">
    <div class ="container" id="metrics" onload="get_metrics">
      <h3>Metrics:</h3>
      <ul>
        <li><%= @days_num %> days this tour </li>
        <!--
        <li><%= @schedule_num %> shows this tour </li>
        <li><%= @shows_played_this_tour %> shows played</li>
        <li><%= @shows_left_this_tour %> shows remaining </li> 
        <li>Average Attendance:</li>
        <li>Highest Attendance:</li>
        <li>Lowest Attendance:</li>
        -->
      </ul>
    </div>
    <div class ="container" id="shows">
      <h3>Upcoming and Recent</h3>
      <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Tour</th>
              <th>Show number</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @recent_days.each do |day| %>
              <tr>
                <td><%= day.date %></td>
                <td><%= this_tour(day.tour_id)%></td>
                <td><%= day.day_of_tour %></td>
                <td><%= link_to 'View', day %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <b><%= link_to 'New Show', new_day_path %></b>
    </div>
  </div>
</body>
</html>